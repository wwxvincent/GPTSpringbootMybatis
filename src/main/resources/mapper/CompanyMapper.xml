<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vincent.gptspringbootmd.mapper.CompanyMapper">
    <insert id="insertDepartment" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO company (pid,name)
        VALUES (#{pid},#{name});
    </insert>
    <update id="updatePath">
        UPDATE company
        <set>
            <if test="idPath != null and idPath !='' " >
                idPath = #{idPath},
            </if>
            <if test = "cnPath != null and cnPath !='' " >
                cnPath = #{cnPath}
            </if>
        </set>
        where id = #{id};
    </update>

    <select id="getAllDepartments" resultType="com.vincent.gptspringbootmd.entity.Company">
        SELECT * FROM company;
    </select>
    <select id="getDepartmentById" resultType="com.vincent.gptspringbootmd.entity.Company">
        SELECT * FROM company WHERE id = #{id};
    </select>
</mapper>